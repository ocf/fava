apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: fava
  ports:
    - port: 80
      targetPort: 8080
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: fava
spec:
  replicas: 1
  selector:
    matchLabels:
      app: fava
  template:
    metadata:
      labels:
        app: fava
    spec:
      volumes:
        - name: fava-pv-beancountfile
          persistentVolumeClaim:
            claimName: fava-pv-claim
      containers:
        - name: fava
          image: "yegle/fava:version-1.14"
          env:
            - name: BEANCOUNT_FILE
              value: "/opt/beancount/ocf-accounts.bean"
          volumeMounts:
            - mountPath: "/opt/beancount"
              name: fava-pv-beancountfile
          resources:
            limits:
              memory: 256Mi
              cpu: 1
          ports:
            - containerPort: 5000
        - name: auth
          image: "keycloak/keycloak-gatekeeper:6.0.1"
          args:
            - --client-id=fava
            - --client-secret=$(KEYCLOAK_SECRET)
            - --encryption-key=$(ENCRYPTION_KEY)
            - --redirection-url=https://fava.dev-kubernetes.ocf.berkeley.edu/
            - --discovery-url=https://auth.ocf.berkeley.edu/auth/realms/ocf
            - --enable-default-deny=true
            - --enable-session-cookies
            - --listen=:8080
            - --upstream-url=http://localhost:5000
            - --resources=uri=/*|roles=ocfstaff
          env:
            - name: KEYCLOAK_SECRET
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: secret
            - name: ENCRYPTION_KEY
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: encryption_key
---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak-client
type: Opaque
stringData:
  secret: <%= keycloak_secret %>
  encryption_key: <%= keycloak_encryption_key %>
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: fava-pv-claim
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 2Gi
  storageClassName: "managed-nfs-storage"  
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: fava.dev-kubernetes.ocf.berkeley.edu
      http:
        paths: 
          - backend:
              serviceName: service
              servicePort: 80  
