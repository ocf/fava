apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: fava
  ports:
    - port: 80
      targetPort: 8080
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: fava
spec:
  replicas: 1
  selector:
    matchLabels:
      app: fava
  template:
    metadata:
      labels:
        app: fava
    spec:
      volumes:
        - name: beancount-git
          emptyDir: {}
      containers:
        - name: fava
          image: "yegle/fava:version-1.15"
          env:
            - name: BEANCOUNT_FILE
              value: "/opt/git-sync/beancount/beancount/init.beancount"
          volumeMounts:
            - mountPath: "/opt/git-sync"
              name: beancount-git
              readOnly: true
          resources:
            limits:
              memory: 256Mi
              cpu: 1
          ports:
            - containerPort: 5000
        - name: git-sync
          image: "k8s.gcr.io/git-sync:v3.1.5"
          env:
            - name: GIT_SYNC_REPO
              value: "https://github.com/ocf/beancount"
            - name: GIT_SYNC_ROOT
              value: "/opt/git-sync"
            - name: GIT_SYNC_WAIT
              value: "60"
            - name: GIT_SYNC_USERNAME
              value: "ocfbot"
            - name: GIT_SYNC_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: git-sync-pw
                  key: ocfbot-git-pw
          volumeMounts:
            - mountPath: "/opt/git-sync"
              name: beancount-git
        - name: auth
          image: "keycloak/keycloak-gatekeeper:6.0.1"
          args:
            - --client-id=fava
            - --client-secret=$(KEYCLOAK_SECRET)
            - --encryption-key=$(ENCRYPTION_KEY)
            - --redirection-url=https://fava.ocf.berkeley.edu/
            - --discovery-url=https://auth.ocf.berkeley.edu/auth/realms/ocf
            - --enable-default-deny=true
            - --enable-session-cookies
            - --listen=:8080
            - --upstream-url=http://localhost:5000
            - --resources=uri=/*|roles=ocfstaff
            - --headers=Host=fava.ocf.berkeley.edu
          env:
            - name: KEYCLOAK_SECRET
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: secret
            - name: ENCRYPTION_KEY
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: encryption_key
---
apiVersion: v1
kind: Secret
metadata:
  name: git-sync-pw
type: Opaque
stringData:
  ocfbot-git-pw: <%= ocfbot_git_password %>
---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak-client
type: Opaque
stringData:
  secret: <%= keycloak_secret %>
  encryption_key: <%= keycloak_encryption_key %>
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
  annotations:
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
spec:
  rules:
    - host: fava.ocf.berkeley.edu
      http:
        paths: 
          - backend:
              serviceName: service
              servicePort: 80  
